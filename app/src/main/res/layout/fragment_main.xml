<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!--Show dialog-->
        <Button
            android:id="@+id/dialog_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/show_dialog"
            android:layout_marginBottom="16dp"/>

        <!--Title-->
        <CheckBox
            android:id="@+id/check_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="16sp"/>

        <!--Title multiline-->
        <CheckBox
            android:id="@+id/check_title_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_multiline"
            android:textSize="16sp"/>

        <!--Icons-->
        <CheckBox
            android:id="@+id/check_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/icons"
            android:textSize="16sp"/>

        <!--Dividers-->
        <CheckBox
            android:id="@+id/check_dividers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dividers"
            android:textSize="16sp"/>

        <!--Full width-->
        <CheckBox
            android:id="@+id/check_full_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/full_width"
            android:textSize="16sp"/>

        <!--Callback-->
        <CheckBox
            android:id="@+id/check_callback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/callback"
            android:textSize="16sp"/>

        <!--FAB-->
        <CheckBox
            android:id="@+id/check_fab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fab_behavior"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp">

            <RadioButton
                android:id="@+id/radio_slide_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/slide_up"/>

            <RadioButton
                android:id="@+id/radio_show_hide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/show_hide"/>

        </LinearLayout>

        <!--Window Dimming-->
        <CheckBox
            android:id="@+id/check_wd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/window_dimming"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp">

            <SeekBar
                android:id="@+id/wd_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="40dp"/>

            <TextView
                android:id="@+id/wd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"/>

        </FrameLayout>

        <!--Cell height-->
        <CheckBox
            android:id="@+id/check_ch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cell_height"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp">

            <SeekBar
                android:id="@+id/ch_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="40dp"/>

            <TextView
                android:id="@+id/ch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>